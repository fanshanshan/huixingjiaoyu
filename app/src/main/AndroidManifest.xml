<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qulink.hxedu">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-feature android:name="android.hardware.Camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.sign.PlatformGroupScoreDetailActivity"></activity>
        <activity
            android:name=".ui.sign.PlatformAccountSignActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ui.sign.AddStudyPlanActivity" />
        <activity android:name=".ui.sign.StudyPlanActivity" />
        <activity android:name=".ui.VipDetailActivity" />
        <activity android:name=".ui.SendVipActivity" />
        <activity
            android:name=".ui.sign.SignActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.live.AuthorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.ExceptionActivity"
            android:screenOrientation="portrait" /> <!-- 版本更新所要用到的 fileProvider 用于兼容7.0通知栏的安装 -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.qulink.hxedu.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true"> <!-- 元数据 -->
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider_paths" />
        </provider>

        <activity
            android:name=".ui.EditHeadAndNickActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.SettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.ForgetPwdActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.PwdLoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.MyOrderActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.BuyLessonActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.RichTextActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.RegisteActivity"
            android:screenOrientation="portrait" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.CourseDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.CourseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.SearchActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.BaseActivity" />
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.ImagesPreviewActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>