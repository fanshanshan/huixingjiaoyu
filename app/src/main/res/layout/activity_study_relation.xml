<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.StudyRelationActivity">



    <com.qulink.hxedu.view.MyScrollView
        android:id="@+id/sc"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/blue"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="500dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:paddingRight="26dp"
                    android:paddingLeft="26dp"
                    android:paddingBottom="20dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingTop="20dp"
                    android:background="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="100dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/yqxd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginTop="12dp"
                        android:id="@+id/iv_qrcode"
                        android:layout_width="200dp"
                        android:layout_height="200dp" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_invite_code"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginLeft="8dp"
                        android:id="@+id/iv_copy"
                        android:src="@drawable/copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:layout_marginTop="12dp"
                    android:id="@+id/tv_share"
                    android:textColor="#339DFA"
                    android:textSize="15sp"
                    android:text="@string/share_qrcode"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="12dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/share_btn_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:elevation="5dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingLeft="16dp"
                    android:text="@string/study_rule"
                    android:textSize="15sp"
                    android:textColor="#666666"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/background_circle_universal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:background="@drawable/background_circle_universal"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:elevation="5dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingLeft="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:paddingRight="15dp"
                        android:visibility="gone"
                        android:id="@+id/rl_high"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="15sp"
                            android:textColor="#222222"
                            android:text="我的学长"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_alignParentRight="true"
                            android:id="@+id/tv_high"
                            android:textSize="15sp"
                            android:textColor="#222222"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <include layout="@layout/line" android:visibility="gone"/>
                    <RelativeLayout
                        android:paddingRight="15dp"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="15sp"
                            android:textColor="#222222"
                            android:text="我的学弟学妹"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_alignParentRight="true"
                            android:id="@+id/tv_low"
                            android:textSize="15sp"
                            android:textColor="#222222"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/rl_lower_bar"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:layout_marginBottom="12dp"
                        android:paddingRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:text="姓名"
                            android:textStyle="bold"
                            android:layout_centerVertical="true"
                            android:id="@+id/tv_name"
                            android:textColor="#FEB22B"
                            android:textSize="17sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="性别"
                            android:textStyle="bold"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/tv_sex"
                            android:textColor="#FEB22B"
                            android:textSize="17sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                        <TextView
                            android:textStyle="bold"
                            android:text="学弟学妹"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="8dp"
                            android:textColor="#FEB22B"
                            android:textSize="17sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <com.scwang.smart.refresh.layout.SmartRefreshLayout
                        android:layout_width="match_parent"
                        android:id="@+id/smart_layout"
                        app:srlEnableRefresh="false"
                        android:layout_height="200dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <com.qulink.hxedu.view.EmptyRecyclerView
                                android:id="@+id/recycle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            </com.qulink.hxedu.view.EmptyRecyclerView>

                            <TextView
                                android:visibility="gone"
                                android:textSize="15sp"
                                android:gravity="center"
                                android:textColor="#CCCCCC"
                                android:text="没有邀请到学弟学妹"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </RelativeLayout>
                    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"/>
            </LinearLayout>

        </RelativeLayout>

    </com.qulink.hxedu.view.MyScrollView>

    <include layout="@layout/bar"/>
</RelativeLayout>