<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_root"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ui.course.SearchCourseActivity">

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:id="@+id/drawer_Layout"

        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/status"/>


            <LinearLayout
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bar_height">

                <ImageView
                    android:id="@+id/back"
                    android:src="@drawable/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/search_edit_bg"
                    android:paddingLeft="12dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:paddingRight="12dp"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="30dp">
                    <ImageView
                        android:src="@drawable/search_page_sc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:imeOptions="actionSearch"
                        android:singleLine="true"
                        android:layout_marginLeft="8dp"
                        android:background="@null"
                        android:textColor="@color/black"
                        android:textColorHint="#999999"
                        android:textSize="13sp"
                        android:hint="@string/search_edit_hint"
                        android:layout_weight="1"
                        android:id="@+id/et_search"
                        android:layout_width="0dp"
                        android:layout_height="30dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_cancel"
                    android:textSize="15sp"
                    android:textColor="#999999"
                    android:text="取消"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_search_history"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:paddingRight="15dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_centerVertical="true"
                            android:textSize="15sp"
                            android:textColor="#222222"
                            android:text="@string/search_hitory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:id="@+id/iv_delete"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <com.qulink.hxedu.view.FlowLayout
                        android:id="@+id/flowLayout_search_record"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </com.qulink.hxedu.view.FlowLayout>
                </LinearLayout>


                <LinearLayout
                    android:background="@color/white"
                    android:visibility="gone"
                    android:id="@+id/ll_search_result"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:id="@+id/ll_zonghe"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textColor="#222222"
                                android:textSize="15sp"
                                android:text="综合"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <ImageView
                                android:id="@+id/iv_zonghe"
                                android:layout_marginLeft="4dp"
                                android:src="@drawable/shang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:id="@+id/ll_price"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:textColor="#222222"
                                android:textSize="15sp"
                                android:text="价格"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        <ImageView
                            android:id="@+id/iv_price"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/shang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                        <LinearLayout
                            android:gravity="right|center_vertical"
                            android:id="@+id/ll_filter"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:textColor="#222222"
                                android:textSize="15sp"
                                android:text="筛选"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <ImageView
                                android:id="@+id/iv_filter"
                                android:layout_marginLeft="4dp"
                                android:src="@drawable/filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                    </LinearLayout>

                    <include layout="@layout/line"/>
                    <com.scwang.smart.refresh.layout.SmartRefreshLayout
                        android:layout_width="match_parent"
                        android:id="@+id/smart_layout"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.qulink.hxedu.view.EmptyRecyclerView
                                android:id="@+id/recycle_search_result"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            </com.qulink.hxedu.view.EmptyRecyclerView>

                            <include layout="@layout/no_data_layout"/>
                        </RelativeLayout>
                    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_gravity="end"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:paddingBottom="60dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:paddingBottom="12dp"
                    android:background="#F8F4F5"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView

                        android:layout_marginLeft="12dp"
                        android:layout_gravity="bottom|left"
                        android:text="@string/filter"
                        android:textSize="13sp"
                        android:textColor="#999999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <TextView
                    android:text="@string/course_type"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:paddingRight="12dp"
                    android:paddingLeft="12dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:background="@drawable/filter_normal"
                        android:layout_marginRight="12dp"
                        android:text="付费课程"
                        android:orientation="vertical"
                        android:id="@+id/tv_fufei"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:paddingTop="8dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="8dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">


                    </TextView>
                    <TextView
                        android:background="@drawable/filter_normal"

                        android:layout_marginRight="12dp"
                        android:text="免费课程"
                        android:orientation="vertical"
                        android:id="@+id/tv_mianfei"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:paddingTop="8dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="8dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">


                    </TextView>
                    <TextView
                        android:background="@drawable/filter_normal"

                        android:text="VIP免费"
                        android:orientation="vertical"
                        android:id="@+id/tv_vip"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:paddingTop="8dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="8dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">


                    </TextView>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="12dp"
                    android:id="@+id/recycle_filter_sub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>


            <LinearLayout
                android:paddingBottom="20dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_reset"
                    android:background="@drawable/reset_btn_bg"
                    android:layout_marginLeft="12dp"
                    android:gravity="center"
                    android:textColor="#AAAAAA"
                    android:textSize="13sp"
                    android:text="@string/reset"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp" />


                <TextView
                    android:id="@+id/tv_sure"
                    android:background="@drawable/sure_btn_bg"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:text="@string/sure"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.drawerlayout.widget.DrawerLayout>


