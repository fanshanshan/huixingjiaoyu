<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.bank.AddBankActivity">

    <include layout="@layout/bar"/>
    <include layout="@layout/divider_bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="15dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加银行卡"
            android:textColor="#333333"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="请绑定持卡人本人银行卡"
            android:textColor="#CCCCCC"
            android:textSize="13sp" />
    </LinearLayout>

    <include layout="@layout/divider_bold" />

    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="持卡人："
            android:textColor="#222222"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="15sp"
            android:inputType="text"
            android:hint="请输入真实姓名"
            android:paddingLeft="12dp"
            android:textColorLink="#CCCCCC" />
    </LinearLayout>

    <include layout="@layout/line" />

    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="卡号："
            android:textColor="#222222"
            android:textSize="15sp" />

        <EditText
            android:inputType="number"
            android:id="@+id/et_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="15sp"
            android:hint="持卡人本人银行卡号"
            android:paddingLeft="12dp"
            android:textColorLink="#CCCCCC" />
    </LinearLayout>

    <include layout="@layout/line" />

    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="开户行："
            android:textColor="#222222"
            android:textSize="15sp" />

        <EditText
            android:inputType="text"
            android:id="@+id/et_bank_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入开户行"
            android:paddingLeft="12dp"
            android:textSize="15sp"

            android:textColorLink="#CCCCCC" />
    </LinearLayout>

    <include layout="@layout/line" />

    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="手机号："
            android:textColor="#222222"
            android:textSize="15sp" />

        <EditText
            android:inputType="number"
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入该银行卡绑定的手机号"
            android:paddingLeft="12dp"
            android:textSize="15sp"

            android:textColorLink="#CCCCCC" />
    </LinearLayout>

    <include layout="@layout/line" />

    <LinearLayout
        android:id="@+id/ll_user_rule"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="15sp"
            android:textColor="#cccccc"
            android:layout_marginLeft="4dp"
            android:text="同意"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_user_rule"
            android:textSize="15sp"
            android:textColor="@color/theme_color"
            android:layout_marginLeft="4dp"
            android:text="《用户协议》"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/tv_next"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:text="下一步"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/login_btn_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>